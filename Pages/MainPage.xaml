<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:pageModels="clr-namespace:Gameball.PageModels"
             x:Class="Gameball.MainPage"
             x:DataType="pageModels:MainPageModel"
             BackgroundColor="{DynamicResource SecondaryColor}">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25" 
            Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">

            <Button 
                Text="Refferal Page"
                Command="{Binding OpenRefferalCommand}"
                StyleClass="CenteredButton"/>
            
            <Button 
                Text="Plus Rewards Page"
                Command="{Binding OpenPlusRewardsCommand}"
                StyleClass="CenteredButton"/>
            
            <Button 
                Text="Plus Rewards Logged Page"
                Command="{Binding OpenPlusRewardsLoggedCommand}"
                StyleClass="CenteredButton"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
